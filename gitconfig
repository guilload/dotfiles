	ui = true
[commit]
    gpgSign = true
[core]
    editor = vim
    excludesFile = ~/.gitignore
	sparseCheckout = true
	precomposeunicode = true
    pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
    colorMoved = default
	tool = meld
[gpg]
    program = gpg
[merge]
    conflictStyle = diff3
	tool = meld
[pull]
    rebase = true
[push]
	default = current
[rebase]
    autoSquash = true
    autoStash = true
[rerere]
	enabled = true
