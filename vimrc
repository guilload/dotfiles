set autoread
set history=500
set hlsearch
set ls=2
set number
set ruler
set title

filetype indent on
filetype plugin on

" Python specific
"

" Use spaces instead of tabs
set expandtab

" Be smart when using tabs ;)
set smarttab

" 1 tab == 4 spaces
set shiftwidth=4
set softtabstop=4
set tabstop=4

set textwidth=79
set autoindent
syntax on

" Toggle auto-indenting for code paste
set pastetoggle=<F2>
