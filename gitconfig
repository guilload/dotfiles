[alias]
    ad = add -p
    br = branch
    brm = branch -m
    cm = commit -v -S
    cma = commit --amend --no-edit -v -S
    cmae = commit --amend -v -S
    cmf = commit --fixup
    cmm = commit -m
    cmw = commit -m "WIP"
    co = checkout
    cob = checkout -b
    com = checkout main
    coo = checkout --ours
    cot = checkout --theirs
    cop = checkout --patch
    cp = cherry-pick -S
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue
    df = diff
    dfc = diff --cached
    fclean = clean -fdx
    f = fetch
    fo = fetch origin
    fom = fetch origin main
    lg = log --graph --oneline --decorate --all
    ph = push
    phf = push --force-with-lease
    phfo = push --force-with-lease origin
    pho = push origin
    pl = pull
    plo = pull origin
    plom = pull origin main
    rb = rebase
    rbm = rebase main
    rbom = rebase origin main
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i -S
    rma = git ls-files --deleted | git rm
    rs = reset
    rss = reset --soft
    rsh = reset HEAD
    rshh = reset HEAD^
    rshhh = reset HEAD^^
    rshard = reset --hard
    rst = restore
    sp = stash pop
    ss = stash save
    ssm = stash save -m
    ssp = stash save -p
    sspm = stash save -p -m
    sls = stash list
    st = status
    sw = show
